{
    "name": "dontdrinkandroot/common",
    "type": "library",
    "description": "Commonly used PHP extensions and helpers",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Philip Washington Sorst",
            "email": "philip@sorst.net",
            "homepage": "https://sorst.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dontdrinkandroot\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dontdrinkandroot\\Common\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ext-simplexml": "*",
        "phpunit/phpunit": "^9.5.28",
        "phpstan/phpstan": "^2.1"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.3.x-dev"
        },
        "phpstan": {
            "includes": [
                "phpstan-extension.neon"
            ]
        }
    }
}
